@model RecipeWebApp.Models.Recipe

<link href="~/Content/Site.css" rel="stylesheet" />
<style>
dd {
    margin-bottom: 0.3em;
    display:    block;
}
.heading-inline {
    display: inline-block;
}
</style>

    <div class="modal-content details">
        <div class="modal-header">
            <span id="aClose" class="close">
                @Ajax.ActionLink("x", "Add", new AjaxOptions { UpdateTargetId = "targetAdd", InsertionMode = InsertionMode.Replace })
            </span>
       
        </div>
        <div id="contentContainer" class="modal-body">
            <div id="addModalContent" class="floatLeft">

                <h2 class="page-heading heading-inline modal-heading">Add</h2>
                @Html.ValidationSummary(true, "Failed Validation!", new { @class = "text-danger heading-inline" })
                
                <dl class="dl-horizontal">
                    <dt>@Html.DisplayNameFor(model => model.Name)</dt>
                    <dd>@Html.EditorFor(model => model.Name)</dd>
                    

                    <dt>@Html.DisplayNameFor(model => model.Time)</dt>
                    <dd>@Html.EditorFor(model => model.Time)</dd>
                    

                    <dt>@Html.DisplayNameFor(model => model.Difficulty)</dt>
                    <dd>@Html.EditorFor(model => model.Difficulty)</dd>
                    

                    <dt>@Html.DisplayNameFor(model => model.ImageUrl)</dt>
                    <dd>@Html.TextAreaFor(model => model.ImageUrl, new { @class = "ta-standard" })</dd>
                    

                    <dt></dt>
                    <dd><input type="submit" value="Create" class="btn-cookbook-standard" /></dd>
                </dl>
            </div>
        </div>
        <div class="modal-footer">
            <dl>
                <dd>@Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })</dd>
                <dd>@Html.ValidationMessageFor(model => model.Time, "", new { @class = "text-danger" })</dd>
                <dd>@Html.ValidationMessageFor(model => model.Difficulty, "", new { @class = "text-danger" })</dd>
                <dd>@Html.ValidationMessageFor(model => model.ImageUrl, "", new { @class = "text-danger" })</dd>
            </dl>
        </div>
    </div>

<!-- Creates an event listener every time the modal is changed-->
<script src="~/scripts/add_modal_close.js"></script>