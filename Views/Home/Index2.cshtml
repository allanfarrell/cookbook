
@{ ViewBag.Title = "Index"; }

<!-- Carousel
   ================================================== -->
<div id="myCarousel" class="carousel slide">
    <div class="carousel-inner">
        <div class="item active">
            <img src="@Url.Content("~/Content/img/rusticKF.jpg")" style="height:70vh">
            <div class="container">
                <div class="carousel-caption">
                    <h2 class="heading-style">..Cookbook..</h2>
                    @Html.ActionLink("Enter", "Recipes", new { @class = "enterLink" })
                </div>
            </div>
        </div>
        <div class="item">
            <img src="@Url.Content("~/Content/img/rusticSpoons.jpg")" alt="" style="width:100%">
            <div class="container">
                <div class="carousel-caption">
                    <h2 class="heading-style">Forks over knives.</h2>
                    @Html.ActionLink("Enter", "Recipes", new { @class = "enterLink" })
                </div>
            </div>
        </div>
        <div class="item">
            <img src="@Url.Content("~/Content/img/rusticRest.jpg")" alt="" style="height:70vh">
            <div class="container">
                <div class="carousel-caption">
                    <h2 class="heading-style">One more for good measure.</h2>
                    @Html.ActionLink("Enter", "Recipes", new { @class = "enterLink" })
                </div>
            </div>
        </div>
    </div>
    <a class="left carousel-control" href="#myCarousel" data-slide="prev">‹</a>
    <a class="right carousel-control" href="#myCarousel" data-slide="next">›</a>
</div><!-- /.carousel -->
